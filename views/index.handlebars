<div class="row mb-5">
    <div class="col-6 text-center">
        <h5> Burgers to Eat</h5>
        <ul class="list-group ml-5" id="notEaten">
            {{#each burgers.uneaten}}
            <li class="list-group-item d-flex justify-content-between align-items-center" id="{{routeName}}">
                {{burger_name}}
                <button class="btn btn-danger devourBtn" flavor="{{routeName}}">Devour</button>
            </li>
            {{/each}}
        </ul>
    </div>
    <div class="col-6 text-center">
        <h5>Burgers Already Devoured!</h5>
        <ul class="list-group mr-5" id="eaten">
            {{#each burgers.eaten}}
            <li class="list-group-item d-flex justify-content-between align-items-center" id="{{routeName}}">
                {{burger_name}}
            </li>
            {{/each}}
        </ul>
    </div>
</div>
<form class="mb-5">
    <div class="form-group mx-5">
        <label for="burgerInput">Enter a burger you'd like to eat!</label>
        <textarea class="form-control" id="burgerInput" rows="2"></textarea>
    </div>
    <div class="row justify-content-end mr-5">
        <button type="submit" class="btn btn-danger col-2" id="burgerBtn">Submit</button>
    </div>
</form>


